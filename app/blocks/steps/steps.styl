.steps
	position relative
	display block
	width 100%
	font-family 'Futura PT Heavy', sans-serif
	font-size 14px
	text-align center
	letter-spacing 1.3px
	color white
	text-transform uppercase

	@media screen and (min-width: 860px)
		text-align right

	&__name
		display inline-block
		color #00aeef

	&__item
		padding 0 2px

		&:hover
			color #00aeef

	> .light
		color white

	> .dark
		color black

	> .active
		color #00aeef
