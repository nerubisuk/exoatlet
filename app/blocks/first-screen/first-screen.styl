.first-screen
	display block

	.screen
		padding-bottom 150px
		background #e7e7e7

	h3
		position relative
		z-index 2
		margin-bottom 40px
		margin-left -45%
		font-family 'Futura PT Heavy', sans-serif
		font-size 30px
		color #00aeef

		@media screen and (min-width: 860px)
			font-size 72px

	p
		position relative
		z-index 2
		margin-bottom 10px
		margin-left -20%
		// margin-left -30%
		font-family 'Intro Book', sans-serif
		font-size 15px
		line-height 1.5

		@media screen and (min-width: 860px)
			margin-bottom 60px
			font-size 24px

	.row
		display table

	.column
		position relative
		display table-cell
		vertical-align bottom

		img
			position absolute
			z-index 1
			top 0
			margin-left -145%
			width 360%
			border-bottom 4px solid #00aeef

			@media screen and (min-width: 860px)
				margin-left -20%
				width 120%

	.column.right
		padding-top 13%
		width 70%

		@media screen and (min-width: 860px)
			width 40%


	.column
		.first-screen__number
			position relative
			z-index 0
			margin-bottom -150px
			width 100%
			text-align right

			img
				position relative
				margin-right -40px
				margin-left -20%
				width 110%
				border none

				@media screen and (min-width: 860px)
					margin-right 0

	.more
		position relative
		display table
		width 100%
		font-family 'Futura PT Heavy', sans-serif
		text-align right
		text-transform uppercase
		color black
		transition color .2s ease-out

		@media screen and (min-width: 860px)
			font-size 24px

		&__line
			position relative
			display table-cell
			width 50%
			vertical-align middle

			&:after
				position absolute
				left 0
				width 100%
				height 10px
				content ''
				background none

				@media screen and (min-width: 860px)
					background #00aeef

		&__text
			padding-bottom 20px
			display table-cell
			width 50%
			vertical-align middle
			border-bottom 10px solid #00aeef

			@media screen and (min-width: 860px)
				border-bottom 20px solid #00aeef

		&:hover
			color #00aeef
