.zero-screen
	position relative
	padding 50px 0 70px
	display block
	overflow hidden
	background #11202d url('../images/00/screen-bg.jpg') top center no-repeat
	background-size cover

	.logo
		position absolute
		top -33px
		left 60px
		display block
		font-family 'Futura PT Heavy', sans-serif
		font-size 35px
		color white

		@media screen and (min-width: 860px)
			position relative
			top auto
			left auto
			display table-cell

	.video-oval
		position absolute
		top -180px
		right -170px
		width 325px
		height 325px
		transition transform .4s ease-out

		@media screen and (min-width: 860px)
			top -460px
			right -460px
			width 828px
			height 828px

		.oval-icon
			width inherit
			height inherit

	.play-icon
		position absolute
		z-index 99
		top 0
		right 30px
		width 50px
		height 50px
		cursor pointer
		transition transform .2s ease-out

		&:hover
			transform scale(1.1)

		@media screen and (min-width: 860px)
			top 70px
			right 20px
			width 120px
			height 120px

	.first-screen__description
		position relative
		padding-top 80px

		@media screen and (min-width: 860px)
			padding-top 195px

	.first-line
		font-size 30px
		line-height 1.3
		letter-spacing .05ex

		@media screen and (min-width: 860px)
			font-size 72px

	.second-line
		font-size 22px
		line-height 1.5
		letter-spacing .05ex

		@media screen and (min-width: 860px)
			font-size 50px

	.third-line
		font-size 30px
		line-height 1
		letter-spacing .05ex

		@media screen and (min-width: 860px)
			font-size 72px

	.fourth-line
		font-size 22px

		@media screen and (min-width: 860px)
			font-size 50px

	.fifth-line
		font-size 36px
		line-height 32px
		letter-spacing .05ex

	.white
		font-family 'Futura PT Heavy', sans-serif
		color white

	.blue
		font-family 'Intro Book', sans-serif
		color #6bccfe

	.steps
		margin-top 60px

		@media screen and (min-width: 860px)
			margin-top 0
