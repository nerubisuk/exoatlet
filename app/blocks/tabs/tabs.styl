.tabs
	width 100%

	&__nav
		display table
		width 100%
		font-family 'Futura PT Bold', sans-serif
		font-size 16px
		color black
		text-transform uppercase
		background white

		li
			padding 10px 0
			display table-cell
			width 50%
			text-align center
			border-bottom 3px solid transparent
			transition border-color .2s ease-out, color .2s ease-out

			&:hover
				cursor pointer
				color #00aeef
				border-color #00aeef

		.active
			color #00aeef
			border-bottom 3px solid #00aeef

	&__pane
		display none

	> .active
		display block
