.first-screen
	position relative
	padding 25px 13px 80px 15px
	display block
	overflow hidden
	background url('../images/first-screen-bg.jpg') top center no-repeat
	background-size cover

	.exoatlet-logo
		position relative
		margin-left 30px
		display inline-block
		width 95px
		height 18px
		font-family 'Futura PT Heavy', sans-serif
		font-size 19px
		color white

	.video-oval
		position absolute
		top -180px
		right -170px
		width 325px
		height 325px
		transition transform .4s ease-out

		.oval-icon
			width 325px
			height 325px

	.video-oval.hovered
		transform scale(1.03)

	.play-icon
		position absolute
		top 30px
		right 30px
		width 50px
		height 50px
		cursor pointer
		transition transform .2s ease-out

		&:hover
			transform scale(1.1)

	.first-screen__description
		margin-top 80px

	.first-line
		font-size 30px
		line-height 37px
		letter-spacing .05ex

	.second-line
		font-size 22px
		line-height 37px
		letter-spacing .05ex

	.third-line
		font-size 30px
		line-height 30px
		letter-spacing .05ex

	.fourth-line
		font-size 22px

	.fifth-line
		font-size 36px
		line-height 32px
		letter-spacing .05ex

	.white
		font-family 'Futura PT Heavy', sans-serif
		color white

	.blue
		font-family 'Intro Book', sans-serif
		color #6bccfe
