.news-block
	position relative
	margin-top 50px
	display table
	color white

	@media screen and (min-width: 860px)
		margin-top 130px
		max-width 620px

	.news-image
		display table-cell
		width 33%
		height 105px
		vertical-align top

		img
			width 100%
			border-bottom 3px solid #00aeef
			transition transform .2s ease-out

		&:after
			position absolute
			left 33%
			bottom -2px
			width 63px
			height 5px
			content ''
			background-color #00aeef

	.news-content
		padding-top 5px
		padding-left 14px
		display table-cell
		vertical-align top

		.news-date
			margin-bottom 5px
			font-family 'Futura PT Bold', serif
			font-size 9px
			letter-spacing .5px

			@media screen and (min-width: 860px)
				font-size 14px
				margin-bottom 15px

		.news-text
			margin-bottom 5px
			font-family 'Intro Book', sans-serif
			font-size 12px
			line-height 1.4
			letter-spacing .5px

			@media screen and (min-width: 860px)
				font-size 16px

		.news-more
			position absolute
			z-index 99
			bottom -14px
			margin-left 49px
			display block
			width inherit
			font-family 'Futura PT Bold', serif
			// font-size 12px
			white-space nowrap
			text-transform uppercase
			letter-spacing 1px
			cursor pointer
			color #00aeef
			transition color .2s ease-out

			&:hover
				color white

			@media screen and (min-width: 860px)
				font-size 24px
