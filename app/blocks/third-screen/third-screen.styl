.third-screen
	padding 60px 0
	display block
	background white

	@media screen and (min-width: 860px)
		padding 160px 0 60px

	a
		color black
		transition color .2s ease-out

		&:hover
			color #00aeef

	h3
		position absolute
		z-index 1
		padding-top 50px
		font-family 'Futura PT Bold', sans-serif
		font-size 50px
		color #060606

		@media screen and (min-width: 860px)
			font-size 120px
			white-space nowrap

	p
		position relative
		z-index 1
		margin-bottom 80px
		padding-top 200px
		font-family 'Intro Book Regular', sans-serif
		font-size 15px
		line-height 1.5

		@media screen and (min-width: 860px)
			padding-top 250px
			font-size 24px

	.row
		display table

	.column
		position relative
		display table-cell
		vertical-align middle

		@media screen and (min-width: 860px)
			width 50%
			vertical-align top

	&__cities
		position relative
		z-index 1
		padding-top 10px
		display inline-block
		width 50%
		font-family 'Futura PT Bold', sans-serif
		text-transform uppercase
		line-height 1.3
		border-top 5px solid black

		@media screen and (min-width: 860px)
			padding-top 20px
			display block
			width 100%
			font-size 24px
			border-top 10px solid black

	&__number
		position absolute
		z-index 0
		top 30%
		right -50px
		margin-bottom 20px
		min-width 200px

		@media screen and (min-width: 860px)
			position relative

		img
			width 100%

	&__become-pilot
		position absolute
		right 0
		bottom 20%
		padding-top 10px
		text-transform uppercase
		display inline-block
		font-family 'Futura PT Bold', sans-serif
		white-space nowrap
		border-top 15px solid black

		@media screen and (min-width: 860px)
			position relative
			padding-top 20px
			font-size 24px
			border-top 30px solid black

	.steps
		margin-top 40px
