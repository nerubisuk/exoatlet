.fifth-screen
	position relative
	padding 60px 0
	display block
	color white
	background #11202d

	&__number
		position relative
		z-index 0
		margin-top -15px
		margin-left -30%
		width 68%

		@media screen and (min-width: 860px)
			margin-top -15px
			margin-bottom -100px
			margin-left 0
			width 50%


		img
			width 100%

	.event
		position relative
		z-index 1
		margin-left -16px
		display block
		width 100%

		@media screen and (min-width: 860px)
			margin-left 0
			display table

		.event-date
			margin-bottom 30px
			padding-left 16px
			display block
			font-family 'Futura PT Heavy'
			vertical-align top

			@media screen and (min-width: 860px)
				padding-left 0
				display table-cell

			&__day
				margin-bottom 10px
				padding-bottom 7px
				display inline-block
				font-size 12px
				white-space nowrap
				border-bottom 2px solid white

				@media screen and (min-width: 860px)
					padding-bottom 13px
					font-size 24px
					border-bottom 5px solid white

			&__year
				font-size 10px

				@media screen and (min-width: 860px)
					font-size 16px

		&__image
			display table-cell
			width 40%
			vertical-align top

			@media screen and (min-width: 860px)
				padding-top 55px

			img
				width 100%
				max-width 475px
				border-bottom 4px solid #00aeef

		&__text
			position relative
			padding-left 30px
			display table-cell
			font-family 'Futura PT Bold', sans-serif
			font-size 12px
			line-height 1.3
			vertical-align middle

			@media screen and (min-width: 860px)
				font-size 24px

		.event-more
			position absolute
			z-index 1
			right 0
			bottom -30px
			display table
			width 100%
			font-family 'Futura PT Bold', sans-serif
			font-size 16px
			text-transform uppercase

			@media screen and (min-width: 860px)
				bottom -40px
				font-size 24px

			&__border
				display table-cell
				width 70%
				border-top 5px solid #00aeef

				@media screen and (min-width: 860px)
					border-top 10px solid #00aeef

			&__text
				padding-top 10px
				display table-cell

	a
		color #00aeef
		transition color .2s ease-out

		&:hover
			color white


	h3
		position relative
		margin-bottom 15px
		font-family 'Futura PT Bold', sans-serif
		font-size 22px
		text-align left
		letter-spacing .1ex

		@media screen and (min-width: 860px)
			margin-bottom 25px
			font-size 44px

	p
		position relative
		margin-bottom 20px
		font-family 'Intro Book', sans-serif
		line-height 1.5
		text-align left

		@media screen and (min-width: 860px)
			margin-bottom 40px
			font-size 24px
			letter-spacing .02ex

	&__more
		position relative
		font-family 'Futura PT Bold', sans-serif
		text-transform uppercase

		@media screen and (min-width: 860px)
			font-size 24px

	.column
		position relative
		margin-bottom 30px

		@media screen and (min-width: 860px)
			display table-cell
			width 50%
			vertical-align top

		img
			margin-left 30%
			width 100%

	.steps
		margin-top 40px
