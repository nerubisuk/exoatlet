.fourth-screen
	padding 50px 0
	display block
	color white
	background #00aeef

	@media screen and (min-width: 860px)
		padding 100px 0 75px

	h3
		margin-bottom 30px
		font-family 'Futura PT Heavy', sans-serif
		font-size 50px
		text-align right
		word-spacing 1200px

		@media screen and (min-width: 860px)
			margin-bottom 0
			font-size 100px

	p
		padding 0 30px
		font-family 'Intro Book', sans-serif
		font-size 15px
		line-height 1.5
		text-align center

		@media screen and (min-width: 860px)
			font-size 24px
			text-align left

	.row
		display table
		width 100%

		@media screen and (min-width: 860px)
			margin-bottom -100px

			&:last-child
				margin-bottom 0

	.column
		position relative
		margin-bottom 30px
		display block
		width 100%
		text-align center
		vertical-align middle

		@media screen and (min-width: 860px)
			display table-cell
			width 50%

		.bubble
			position absolute
			top 0
			bottom 0
			margin auto
			width 100%
			height 70px
			text-align center

			@media screen and (min-width: 860px)
				height 135px

			&__header
				margin-bottom 10px
				font-family 'Futura PT Heavy', sans-serif
				font-size 45px

				@media screen and (min-width: 860px)
					margin-bottom 20px
					font-size 90px


			&__sub-header
				font-family 'Intro Book', sans-serif
				font-size 12px
				text-transform uppercase

				@media screen and (min-width: 860px)
					font-size 24px


	.width-90
		img
			width 90%

	.width-70
		img
			width 70%

	.width-65
		.bubble
			@media screen and (min-width: 860px)
				height 115px

			&__header
				@media screen and (min-width: 860px)
					font-size 73px


		img
			width 60%

	.steps .active
		color white

	.steps .steps__name
		color white
