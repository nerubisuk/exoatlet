.second-screen
	padding-bottom 60px
	display block
	color white

	.background
		padding 35px 0 10px
		width 100%
		background url('/assets/images/02/screen-bg.jpg') center no-repeat
		background-size cover

		@media screen and (min-width: 860px)
			padding 267px 0 10px

	h3
		position relative
		margin-bottom 40px
		width 70%
		font-family 'Futura PT Heavy', sans-serif
		font-size 30px

		@media screen and (min-width: 860px)
			width 100%
			font-size 72px

	p
		position relative
		z-index 1
		margin-bottom 40px
		padding-left 70px
		font-family 'Intro Book'
		font-size 15px
		line-height 1.5

		@media screen and (min-width: 860px)
			padding-left 95px
			max-width 50%
			font-size 24px

	&__more
		position relative
		z-index 1
		padding-left 70px
		font-family 'Futura PT Bold', sans-serif
		text-transform uppercase
		color white

		@media screen and (min-width: 860px)
			padding-left 95px
			font-size 24px

	&__number
		position relative
		z-index 0
		margin-top -120px
		margin-bottom 130px
		margin-left -70px
		width 70%

		@media screen and (min-width: 860px)
			width 50%

		img
			width 100%

	.slides
		position relative
		margin-top -60px

	.slides-control
		margin-bottom 30px
		font-family 'Futura PT Bold', sans-serif

		&__current
			display inline-block
			font-size 24px
			vertical-align middle
			color #00aeef

		&__all
			display inline-block
			font-size 14px
			vertical-align middle
			color white

		&__arrow
			margin-left 10px
			display inline-block
			font-size 20px
			vertical-align middle

		&__arrow.active
			color #00aeef

		&__arrow.disable
			color #076082

	.slides-images
		display table
		width 100%

		&__image
			display table-cell

			img
				width 100%

	.steps
		margin-top 30px

		@media screen and (min-width: 860px)
			margin-top 80px
